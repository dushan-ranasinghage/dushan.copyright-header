{
  "name": "copyright-header",
  "displayName": "Copyright Header",
  "description": "This simplifies the process of automatically including copyright and license information into your code.",
  "license": "SEE LICENSE IN LICENSE.txt",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.35.0"
  },
  "keywords": [
    "copyright",
    "license"
  ],
  "icon": "./dist/images/icon.png",
  "galleryBanner": {
    "theme": "dark"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dushan-ranasinghage/dushan.copyright-header.git"
  },
  "publisher": "DushanRanasinghage",
  "preview": true,
  "activationEvents": [
    "onCommand:copyright-header.add",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:vue",
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:objective-c",
		"onLanguage:swift",
		"onLanguage:sql",
    "onLanguage:rust",
		"onLanguage:java",
    "onLanguage:csharp",
    "onLanguage:c",
		"onLanguage:cpp",
		"onLanguage:go"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copyright-header.add",
        "title": "Add Copyright Header"
      }
    ],
    "configuration": {
      "title": "copyright-header",
      "properties": {
        "copyright.author": {
          "type": "string",
          "default": "",
          "description": "The author who is doing the develoment in this workspace."
        },
        "copyright.copyrightLine": {
          "type": "string",
          "default": "",
          "description": "Copyright message of your organization"
        },
        "copyright.isNewFiles": {
          "type": "boolean",
          "default": true,
          "description": "Insert copyright header into new files only."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.5",
    "@types/vscode": "^1.35.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  }
}
